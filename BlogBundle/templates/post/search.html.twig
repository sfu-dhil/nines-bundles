{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Blog posts</h1>
    {% if q %}
        <p class="count">
            Displaying {{ posts|length }} posts of {{ posts.getTotalItemCount }} total.
        </p>
    {% endif %}
{% endblock %}

{% block body %}

    <div class='btn-toolbar'>
        <div class='btn-group ms-auto'>
            {% if is_granted('ROLE_BLOG_ADMIN') %}
                <a href="{{ path('nines_blog_post_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New
                </a>
            {% endif %}
        </div>
    </div>

    <div class="clearfix"></div>

    <form method="get">
        <div class="row mb-4">
            <label for="q" class="col-sm-2 col-form-label">Search query</label>
            <div class="col-sm-10">
                <div class="input-group">
                    <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                    <button class="btn btn-primary" id='btn-search' type="submit">
                        <i class='bi bi-search'></i>
                        Search
                    </button>
                </div>
            </div>
        </div>
    </form>

    {% if q %}
        {% for post in posts %}
            <div class="card card-light">
                <div class="card-header">
                    <h2 class="card-title pull-left">
                        <a href="{{ path('nines_blog_post_show', {'id': post.id}) }}">
                            {{ post.title }}
                        </a>
                    </h2>
                    {% if is_granted('ROLE_BLOG_ADMIN') %}
                        <div class="card-title pull-right">{{ post.status.label }}</div>
                    {% endif %}
                    <div class="clearfix"></div>
                </div>
                <div class="card-body">
                    {{ post.excerpt|default('')|sanitize_html }}
                </div>
                <div class="card-footer text-right nines-author">
                    Posted {{ post.created|date }} by {{ post.user.fullname }} in
                    <a href="{{ path('nines_blog_post_category_show', {'id': post.category.id}) }}">
                        {{ post.category -}}
                    </a>.
                </div>
            </div>
        {% endfor %}

        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    {% endif %}

{% endblock %}
