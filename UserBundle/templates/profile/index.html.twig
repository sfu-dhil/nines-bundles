{% extends 'base.html.twig' %}

{% block title %}Profile {{ user.email }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Profile</li>
{% endblock %}

{% block action_buttons %}
    <a href="{{ path('nines_user_profile_edit') }}" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a href="{{ path('nines_user_profile_password') }}" class="btn btn-primary">
        <i class="bi bi-lock"></i> Change Password
    </a>
{% endblock %}

{% block body %}
    <table class="table table-striped table-sm">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Full Name</th>
                <td>{{ user.fullname }}</td>
            </tr>
            <tr>
                <th>Affiliation</th>
                <td>{{ user.affiliation }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(',') }}</td>
            </tr>
            <tr>
                <th>Last Login</th>
                <td>{{ user.login ? user.login|date : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ user.created|date }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ user.updated|date }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
