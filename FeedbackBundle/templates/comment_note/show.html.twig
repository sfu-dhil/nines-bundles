{% extends 'base.html.twig' %}

{% block title %}Comment Note Details {% endblock %}

 {% block pageheader %}
     <h1>Comment Note Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_FEEDBACK_ADMIN') %}
        <div class='btn-toolbar'>
            <div class='btn-group ms-auto'>
                <form class='delete-form' method="post" action="{{ path('nines_feedback_comment_note_delete', {'id': comment_note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this note?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ comment_note.id) }}">
                    <button class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    {% embed '@NinesFeedback/comment_note/partial/detail.html.twig' %}
    {% endembed %}

{% endblock %}
