<table class="table table-striped table-sm">
    <tbody>
        <tr>
            <th>Label</th>
            <td>{{ term.label }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ term.description|default('')|sanitize_html }}</td>
        </tr>
        {% block callback %}{% endblock %}
        <tr>
            <th>Created</th>
            <td>{{ term.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ term.updated|date }}</td>
        </tr>
    </tbody>
</table>