{% extends 'base.html.twig' %}

{% block title %}Reference List{% endblock %}

{% block pageheader %}
    <h1>Reference List</h1>
    <p class="count">
        Displaying {{ references|length }} references of {{ references.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('reference_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed '@NinesUtil/reference/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(references) }}
    </div>

{% endblock %}
