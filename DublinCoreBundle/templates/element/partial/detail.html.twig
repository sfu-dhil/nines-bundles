<table class="table table-striped table-sm" title="Element details">
    <tbody>
        <tr>
            <th>Name</th>
            <td>
                {{ element.name }}
            </td>
        </tr>
        <tr>
            <th>Label</th>
            <td>
                {{ element.label }}
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                {{ element.description|default('')|raw }}
            </td>
        </tr>
        <tr>
            <th>Uri</th>
            <td>
                {{ element.uri }}
            </td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>
                {{ element.comment|default('')|raw }}
            </td>
        </tr>

        <tr>
            <th>Value</th>
            <td>
                {% if element.values|length > 0 %}
                    <ul class="list-unstyled">
                        {% for value in element.values %}
                            <li>
                                <a href='{{ path("nines_dc_value_show", {"id": value.id}) }}'>
                                    {{ value }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ element.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ element.updated|date }}</td>
        </tr>
    </tbody>
</table>


