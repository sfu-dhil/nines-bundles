<h2>Metadata</h2>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tbody>
        <tr>
            <th>Public</th>
            <td>{% if audio.public %}Yes{% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Original Name</th>
            <td>{{ audio.originalName }}</td>
        </tr>
        <tr>
            <th>Audio Path</th>
            <td>{{ audio.audioPath }}</td>
        </tr>
        <tr>
            <th>Mime Type</th>
            <td>{{ audio.mimeType }}</td>
        </tr>
        <tr>
            <th>File Size</th>
            <td>{{ audio.fileSize }}</td>
        </tr>
        <tr>
            <th>Entity</th>
            <td>
                {% set entity = manager.findEntity(audio) %}
                {% if entity %}
                    {{ entity|short_name|camel_title }}
                    <a href='{{ manager.linkToEntity(audio) }}'>
                        {{ entity }}
                    </a>
                {% else %}
                    <i>Unknown ({{ audio.entity }})</i>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ audio.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ audio.updated|date }}</td>
        </tr>
    </tbody>
</table>
