{% extends 'base.html.twig' %}

{% block title %}Audio Details {% endblock %}

 {% block pageheader %}
     <h1>Audio Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('nines_media_audio_delete', {'id': audio.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ audio.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}
    <div class='well'>
        <figure>
            <audio controls src='{{ path('nines_media_audio_play', {'id': audio.id}) }}' type='{{ audio.mimeType }}'>
                Your browser does not support playing audio.
            </audio>
            <figcaption>Link to entity</figcaption>
        </figure>
    </div>

    {% embed '@NinesMedia/audio/partial/detail.html.twig' %}
    {% endembed %}

{% endblock %}
