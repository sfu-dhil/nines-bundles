{% extends 'base.html.twig' %}

{% block title %}PDFDetails {% endblock %}

 {% block pageheader %}
     <h1>PDFDetails</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('nines_media_pdf_delete', {'id': pdf.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ pdf.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}

    <div class='well' id='pdfview' style='height: 40em'></div>

    {% embed '@NinesMedia/pdf/partial/detail.html.twig' %}
    {% endembed %}

{% endblock %}

{% block javascripts %}
    <script src='{{ asset('yarn/pdfobject/pdfobject.min.js') }}'></script>
    <script>PDFObject.embed("{{ path('nines_media_pdf_view', {'id': pdf.id}) }}", "#pdfview")</script>
{% endblock %}
