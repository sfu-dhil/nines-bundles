{% set cols = 3 %}
{% set colspan = 'col-sm-' ~ (12 // cols) %}
{% set rows = (pdfs|length / cols)|round(0, 'ceil') %}

{% for row in 0 .. (rows - 1) %}
    <div class="row">
        {% for col in 0 .. (cols - 1) %}
            {% set index = (row * cols + col)|number_format %}

            {% if pdfs[index] is defined %}
                {% set pdf = pdfs[index] %}
                <div class="col-xs-12 {{ colspan }}">
                    {% embed '@NinesMedia/pdf/partial/thumbnail.html.twig' with {'pdf': pdf} %}
                    {% endembed %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endfor %}
