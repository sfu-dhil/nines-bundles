{#
path_delete - path to remove the pdf.
path_edit - path to edit the pdf.
entity_id - owner of the pdf.
#}

<div class="thumbnail">

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path(path_edit, {'id': entity_id, 'pdf_id': pdf.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span></a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path(path_delete, {'id': entity_id, 'pdf_id': pdf.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ pdf.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></button>
                </form>
            </div>
        </div>
        <div class='clearfix'></div>
    {% endif %}

    <div class="img-container">
        <a href="{{ path('nines_media_pdf_show', {'id': pdf.id}) }}">
            <img src="{{ path('nines_media_pdf_thumb', {'id': pdf.id}) }}" class="img-thumbnail" />
        </a>
    </div>

    <div class="caption">
        <div class='title'>
            {{ pdf.originalName }}
        </div>
        {{ pdf.description|raw }}

        {% if pdf.license %}
            {{ pdf.license|raw }}
        {% endif %}
    </div>

</div>
