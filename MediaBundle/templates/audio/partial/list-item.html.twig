{#
    Audio audio
    string path_show
    string path_edit
    string path_delete
#}
<figure class="figure text-center w-100">
    <div class="hstack gap-2">
        <audio controls src='{{ path('nines_media_audio_play', {'id': audio.id}) }}' type='{{ audio.mimeType }}' class="w-100">
            Your browser does not support playing audio.
        </audio>
        {% if is_granted('ROLE_CONTENT_ADMIN') and showActions ?? true %}
            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-list"></i>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a href="{{ path('nines_media_audio_play', {'id': audio.id}) }}" target="_blank" class="dropdown-item">
                        <i class="bi bi-download"></i> Download
                    </a>
                </li>
                <li>
                    <a href="{{ path_show }}" class="dropdown-item">
                        <i class="bi bi-eye"></i> View
                    </a>
                </li>
                <li>
                    <a href="{{ path_edit }}" class="dropdown-item">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" action="{{ path_delete }}" onsubmit="return confirm('Are you sure you want to delete this audio?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token("delete_audio" ~ audio.id) }}">
                        <button class="dropdown-item link-danger"><i class="bi bi-trash"></i> Delete</button>
                    </form>
                </li>
            </ul>
        {% endif %}
    </div>
    <figcaption class="figure-caption">{{ audio.originalName }}</figcaption>
</figure>