{% extends 'base.html.twig' %}

{% block title %}Audio {{ audio.originalName }}{% endblock %}

 {% block pageheader %}
     <h1>Audio Details</h1>
 {% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{ path('nines_media_audio_index') }}">Audio</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ audio.originalName }}</li>
{% endblock %}

{% block action_buttons %}
    <a href="{{ path('nines_media_audio_play', {'id': audio.id}) }}" class="btn btn-primary" target="_blank">
        <i class="bi bi-download"></i> Download
    </a>
{% endblock %}

{% block body %}
    <figure class="text-center w-100">
        <audio controls src='{{ path('nines_media_audio_play', {'id': audio.id}) }}' type='{{ audio.mimeType }}' class="w-100">
            Your browser does not support playing audio.
        </audio>
        <figcaption class="figure-caption">{{ audio.originalName }}</figcaption>
    </figure>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 my-3 g-4">
        <div class="col">
            <h6><i class="bi bi-file-earmark-music"></i> Audio Path</h6>
            {{ audio.path }}
        </div>
        <div class="col">
            <h6><i class="bi bi-file-earmark"></i> Mime Type</h6>
            {{ audio.mimeType }}
        </div>
        <div class="col">
            <h6><i class="bi bi-file-earmark"></i> File Size</h6>
            {{ audio.fileSize|byte_size }}
        </div>
        <div class="col">
            <h6><i class="bi bi-calendar-event"></i> Created</h6>
            {{ audio.created|date('Y-m-d') }}
        </div>
        <div class="col">
            <h6><i class="bi bi-calendar-event"></i> Last Updated</h6>
            {{ audio.updated|date('Y-m-d') }}
        </div>
        <div class="col">
            <h6><i class="bi bi-info-circle"></i> Description</h6>
            {{ audio.description|default('')|sanitize_html }}
        </div>
        <div class="col">
            <h6><i class="bi bi-list-task"></i> License</h6>
            {{ audio.license|default('')|sanitize_html }}
        </div>
        <div class="col">
            <h6><i class="bi bi-link-45deg"></i> Entity</h6>
            {% include '@NinesUtil/linked_entity/link.html.twig' with {
                'entity': audio
            } %}
        </div>
    </div>
{% endblock %}